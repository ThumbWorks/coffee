<% set_meta_tags title: @group.name, reverse: true %>
<% set_meta_tags description: "#{@group.name} is hosting their events on Gather." %>
<% set_meta_tags og: {
  title: :full_title,
  type: 'website',
  image: og_group_image_url,
  url: request.original_url,
  description: :description
} %>

<%= render 'partials/event_cards', events: @events %>
<%= link_to('Subscribe to Calendar', group_ical_url(@group.id, protocol: :webcal), target: '_blank', class: 'group__subscribe-ical' ) %>