<% set_meta_tags title: 'Find an Event', reverse: true %>
<% set_meta_tags description: 'Find an event happening near you on Gather.' %>
<% set_meta_tags og: {
  title: :full_title,
  type: 'website',
  image: og_events_image_url,
  url: request.original_url,
  description: :description
} %>

<div class="events">
  <%= render 'partials/events', events: @events %>
  <% if @past_events.count > 0 %>
    <h2>Past Events</h2>
    <%= render 'partials/events', events: @past_events %>
  <% end %>
</div>
